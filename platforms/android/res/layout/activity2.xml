<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/gotoActivity1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to activity 1"
        android:onClick="gotoActivity1"/>

    <Button
            android:id="@+id/countClicksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click me"
            android:onClick="countClicks" />

    <Button
            android:id="@+id/calcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calc"
            android:onClick="calc" />

    <TextView
            android:id="@+id/outputNumberOfClicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    <TextView
            android:id="@+id/outputWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

</LinearLayout>