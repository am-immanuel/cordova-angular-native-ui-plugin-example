<?xml version="1.0" encoding="utf-8"?>
<!-- android layout definition for activity 2 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- matching html button with native-id='gotoActivity1Button' -->
    <Button
        android:id="@+id/gotoActivity1Button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Go to activity 1"/>
        <!--android:onClick="gotoActivity1"/>-->

    <!-- matching html button with native-id='countClicksButton' -->
    <Button
            android:id="@+id/countClicksButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Click me"/>
            <!--android:onClick="countClicks" />-->

    <!-- matching html button with native-id='calcButton' -->
    <Button
            android:id="@+id/calcButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Calc"/>
            <!--android:onClick="calc" />-->

    <!-- matching html label (span) with native-id='outputNumberOfClicks' -->
    <TextView
            android:id="@+id/outputNumberOfClicks"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

    <!-- matching html label (span) with native-id='outputWarning' -->
    <TextView
            android:id="@+id/outputWarning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="" />

</LinearLayout>